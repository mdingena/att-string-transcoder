{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./build",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2017"],
    "target": "es6",
    "resolveJsonModule": true
  },
  "include": ["./**/*"]
}
